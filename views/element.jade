- var social = author.profiles.facebook ? 'facebook' : 'twitter';
.container.clearfix
	.row
		.span9
			.banner.clearfix
				.issue-content.alpha
					a.nav.left(href='')
					a.nav.right(href='')
					h4 Problematica
					h2= element.title
					p.issue-content-description= element.abstract
					#issue-full.modal(role="dialog", style="display:none;")
						.modal-header
							button.close(type="button", data-dismiss="modal", aria-hidden="true") x
							h2= element.title
						.modal-body
							p.issue-content-description= element.abstract
							p.issue-content-description= element.essay
						.modal-footer
							button.btn(type="button", data-dismiss="modal", aria-hidden="true") Cerrar
					p
						a(data-toggle="modal", role="button", href="#issue-full").full-read Leer Completo
		- if(typeof(vote) != 'undefined' && vote.choices.length) {
			.span9

				a.delegate(href='')
					| Prefiero delegar mi voto a otra persona
					i
				h3.title-propuestas Propuestas a votar
			- vote.choices.forEach(function(choice) {
			.span3
				.vote-option
					h4= choice.idea.title
					p= choice.idea.essay

					.modal(id="choice-full-#{choice.id}", role="dialog", style="display:none;")
						.modal-header
							button.close(type="button", data-dismiss="modal", aria-hidden="true") x
							h2= choice.idea.title
						.modal-body
							p.issue-content-description= choice.idea.essay
						.modal-footer
							button.btn(type="button", data-dismiss="modal", aria-hidden="true") Cerrar
					.buttons
						a(href="").votar Votar
						a(data-toggle="modal", role="button", href="#choice-full-#{choice.id}").full-read Leer Completo
			-	});

	- }

