#compose.compose-modal(role="dialog", aria-hidden="true", style="display:none;")
  a.close-compose(href="", data-dismiss="modal") Cerrar

  form.compose-modal-inner(method="post", action="/issues/process", autocomplete="off")
    input(type="hidden", name="issue[_id]")
    p.insertion
      span.insertion-point
      input.compose-title.compose-text(name="issue[title]", type="text", placeholder="Titulo de la problematica")

    p.insertion
      span.insertion-point
      textarea.brief.compose-text.expand(name="issue[abstract]", placeholder="Resumen de la problematica")

    p.insertion
      span.insertion-point
      textarea.compose-content.compose-text.expand(name="issue[essay]", placeholder="Contenido de la problematica")

    input(type="submit", class="btn", value="Crear problematica") 
