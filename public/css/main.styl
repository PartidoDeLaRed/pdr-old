	form p:first-child > .insertion-point
		visibility: visible; 


	.insertion {position: relative; margin-bottom: 30px; }



.insertion-point{
	-webkit-animation-name: insertPulse;
	-moz-animation-name: insertPulse;
	-webkit-animation-duration: 2s;
	-moz-animation-duration: 2s;
	-webkit-animation-iteration-count: infinite;
	-moz-animation-iteration-count: infinite;
	-webkit-animation-timing-function: ease-in-out;
	-moz-animation-timing-function: ease-in-out;
}

@-webkit-keyframes insertPulse {
    0% { opacity: 0.0;}
    50% {opacity: 1.0;}
    100% {opacity: 0.0;}
}
